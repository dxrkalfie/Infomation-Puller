<Window x:Class="PullInfomation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Information Puller" Height="650" Width="900"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2892FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2c2c2f"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        <Style TargetType="Expander">
            <Setter Property="Background" Value="#2c2c2f"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="#1c1c1c" BorderBrush="#333" BorderThickness="1" Padding="0">
        <Grid>
            <DockPanel LastChildFill="True">

                <Grid DockPanel.Dock="Top" Height="45" Background="#222" MouseDown="TopBar_MouseDown">
                    <TextBlock Text="Information Puller" FontSize="18" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <Button Content="X" Width="40" Height="40" HorizontalAlignment="Right" 
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            FontWeight="Bold" Click="Close_Click"/>
                </Grid>

                <TabControl x:Name="MainTabControl" Background="Transparent" Foreground="White"
                            SelectionChanged="MainTabControl_SelectionChanged"
                            BorderThickness="0">
                    <TabItem Header="Unity Viewer">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                            <StackPanel Margin="0">

                                <TextBlock Text="Unity .unity3d File:" FontSize="14" FontWeight="SemiBold"/>
                                <DockPanel Margin="0,5,0,0">
                                    <TextBox x:Name="UnityFileTextBox" Width="550" MinHeight="30"/>
                                    <Button Content="Browse" Width="100" Margin="10,0,0,0" Click="BrowseUnity_Click"/>
                                </DockPanel>

                                <Expander Header="Photon Shared Settings" IsExpanded="True">
                                    <TextBox x:Name="PhotonOutput" Height="200" AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                                </Expander>

                                <Expander Header="PlayFab Shared Settings" IsExpanded="True">
                                    <TextBox x:Name="PlayFabOutput" Height="200" AcceptsReturn="True"
                                             VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                                </Expander>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
    </Border>
</Window>
